.page-header
  = link_to plots_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    = t( '.back' )
  = link_to edit_plot_path(@plot), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    = t( '.edit' )
  %h1= t( '.title' )

%dl.dl-horizontal
  %dt= t( 'helpers.label.plot.name' ) + ' :'
    
  %dd= @plot.name
    
  %dt= t( 'helpers.label.plot.desc' ) + ' :'
    
  %dd= @plot.desc
    
  %dt= t( 'helpers.label.plot.story' ) + ' :'
    
  %dd= @plot.story.name
    
