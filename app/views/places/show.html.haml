.page-header
  = link_to story_places_path( @current_story ), class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    = t( '.back' )
  = link_to edit_story_place_path(@current_story, @place), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    = t( '.edit' )
  %h1= t( '.title' )

%dl.dl-horizontal
  %dt= t( 'helpers.label.place.name' ) + ' :'
    
  %dd= @place.name
    
  %dt= t( 'helpers.label.place.desc' ) + ' :'
    
  %dd= @place.desc
    
  %dt= t( 'helpers.label.place.ambiance' ) + ' :'
    
  %dd= @place.ambiance
    
