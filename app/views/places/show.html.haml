.page-header
  = link_to places_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    = t( '.back' )
  = link_to edit_place_path(@place), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    = t( '.edit' )
  %h1= t( '.title' )

%dl.dl-horizontal
  %dt= t( 'helpers.label.place.name' ) + ' :'
    
  %dd= @place.name
    
  %dt= t( 'helpers.label.place.desc' ) + ' :'
    
  %dd= @place.desc
    
  %dt= t( 'helpers.label.place.ambiance' ) + ' :'
    
  %dd= @place.ambiance
    
