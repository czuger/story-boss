.page-header
  = link_to story_places_path(@current_story), class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    = t( '.back' )
  = link_to story_place_url(@current_story, @place), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-info-sign
    = t( '.show' )
  %h1= t( '.title' )

= render 'form'
