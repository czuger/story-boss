= form_for [ @current_story, @character ], html: { class: 'form-horizontal', role: "form" } do |f|
  -if @character.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@character.errors.count, "error")} prohibited this character from being saved:"

      %ul
        - @character.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      
      = f.text_field :name, class: 'form-control'
      

  .form-group
    = f.label :desc, class: 'col-sm-2 control-label'
    .col-sm-10
      
      = f.text_area :desc, class: 'form-control'
      

  .form-group
    = f.label :character, class: 'col-sm-2 control-label'
    .col-sm-10
      
      = f.text_area :character, class: 'form-control'
      

  .form-group
    = f.label :birth, class: 'col-sm-2 control-label'
    .col-sm-10
      
      = f.datetime_select :birth, class: 'form-control'
      

  .form-group
    = f.label :death, class: 'col-sm-2 control-label'
    .col-sm-10
      
      = f.datetime_select :death, class: 'form-control'
      

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary', value: t( '.submit' ), 'data-disable-with' => t( '.submit' )
