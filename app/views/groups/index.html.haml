.page-header
  = link_to new_group_path( locale: I18n.locale ), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t( '.new' )
  %h1= t( '.title' )

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= t( 'helpers.label.group.references' )
        %th= t( 'helpers.label.group.name' )
        %th= t( 'helpers.label.group.desc' )
        %th= t( 'helpers.label.group.groupe_type' )
        %th
        %th
        %th

    %tbody
      - @groups.each do |group|
        %tr
  
  
          %td= group.name
  
  
          %td= group.desc
  
  
          %td= group.groupe_type
  
          %td= link_to t( '.show' ), group
          %td= link_to t( '.edit' ), edit_group_path(group)
          %td= link_to t( '.delete' ), group, data: { confirm: t( '.confirm' ) }, method: :delete
