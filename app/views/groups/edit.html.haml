.page-header
  = link_to story_groups_path( @current_story ), class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    = t( '.back' )
  = link_to [ @current_story, @group ], class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-info-sign
    = t( '.show' )
  %h1= t( '.title' )

= render 'form'
